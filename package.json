{
  "name": "react-intl-redux",
  "version": "2.1.1",
  "description": "Redux binding for React Intl",
  "main": "lib",
  "side-effects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production babel src --out-dir lib",
    "clean": "del lib coverage",
    "lint": "eslint --ignore-path .gitignore --ext js,md .",
    "prepublish": "run-s clean build",
    "test": "run-p test:* lint",
    "test:ava": "jest"
  },
  "peerDependencies": {
    "react-intl": "^2.2.2 ||Â ^3.0.0",
    "react-redux": "^5.0.1 || ^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-export-default-from": "7.5.2",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-syntax-import-meta": "7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/plugin-transform-shorthand-properties": "^7.2.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/register": "^7.7.0",
    "ava": "^2.4.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "cross-env": "^6.0.3",
    "del-cli": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-concise": "^0.37.1",
    "eslint-config-concise-esnext": "^0.37.0",
    "eslint-config-concise-jest": "^0.37.1",
    "eslint-config-concise-react": "^0.37.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.9",
    "immutable": "^4.0.0-rc.12",
    "intl": "^1.2.5",
    "jest": "^24.9.0",
    "jsdom": "^15.2.1",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^9.4.3",
    "npm-run-all": "^4.1.5",
    "prettier-eslint-cli": "^5.0.0",
    "raf": "^3.4.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-intl": "^3.6.0",
    "react-redux": "^7.1.3",
    "react-test-renderer": "^16.12.0",
    "redux": "^4.0.4",
    "redux-immutable": "^4.0.0"
  },
  "repository": "ratson/react-intl-redux",
  "license": "MIT",
  "files": [
    "*.md",
    "LICENSE",
    "lib",
    "src"
  ],
  "keywords": [
    "react",
    "reactjs",
    "react-intl",
    "react-redux",
    "intl",
    "i18n",
    "redux"
  ],
  "browserslist": [
    "last 2 versions",
    "Android > 2",
    "last 2 ChromeAndroid versions"
  ],
  "ava": {
    "require": [
      "@babel/register",
      "raf/polyfill",
      "jsdom-global/register",
      "./test/helpers/enzyme-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "concise",
      "concise-esnext",
      "concise-jest",
      "concise-react"
    ],
    "rules": {
      "comma-dangle": "off",
      "default-param-last": "off",
      "react/jsx-curly-newline": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  }
}
