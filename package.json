{
  "name": "react-intl-redux",
  "version": "2.1.0",
  "description": "Redux binding for React Intl",
  "main": "lib",
  "side-effects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production babel src --out-dir lib",
    "clean": "del lib coverage",
    "lint": "eslint --ignore-path .gitignore --ext js,md .",
    "prepublish": "run-s clean build",
    "test": "run-p test:* lint",
    "test:ava": "ava",
    "coverage": "nyc ava"
  },
  "peerDependencies": {
    "react-intl": "^2.2.2",
    "react-redux": "^5.0.1 || ^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-export-default-from": "7.2.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-syntax-import-meta": "7.2.0",
    "@babel/plugin-transform-shorthand-properties": "^7.2.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "ava": "^1.4.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.16.0",
    "eslint-config-concise": "^0.36.0",
    "eslint-config-concise-ava": "^0.36.0",
    "eslint-config-concise-esnext": "^0.36.0",
    "eslint-config-concise-react": "^0.36.0",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "immutable": "^4.0.0-rc.12",
    "intl": "^1.2.5",
    "jsdom": "^15.0.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.0.0",
    "prettier-eslint-cli": "^5.0.0-beta.0",
    "raf": "^3.4.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-intl": "^2.8.0",
    "react-redux": "^7.0.2",
    "react-test-renderer": "^16.8.6",
    "redux": "^4.0.1",
    "redux-immutable": "^4.0.0"
  },
  "repository": "ratson/react-intl-redux",
  "license": "MIT",
  "files": [
    "*.md",
    "LICENSE",
    "lib",
    "src"
  ],
  "keywords": [
    "react",
    "reactjs",
    "react-intl",
    "react-redux",
    "intl",
    "i18n",
    "redux"
  ],
  "browserslist": [
    "last 2 versions",
    "Android > 2",
    "last 2 ChromeAndroid versions"
  ],
  "ava": {
    "require": [
      "@babel/register",
      "raf/polyfill",
      "jsdom-global/register",
      "./test/helpers/enzyme-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "concise",
      "concise-esnext",
      "concise-ava",
      "concise-react"
    ],
    "rules": {
      "comma-dangle": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  }
}
